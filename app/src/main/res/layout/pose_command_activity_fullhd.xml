<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1_1920x1080"
    android:id="@+id/pose_command_view"
    android:paddingBottom="10dp"
    tools:context=".PoseCommandActivity">

    <LinearLayout
        android:id="@+id/positions_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/desired_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/desired_x_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:textSize="30sp"
                    android:text="@string/x_label"
                    android:textColor="#ffffff" />
                <EditText
                    android:id="@+id/desired_x"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="@string/initPosValue"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:inputType="numberSigned|numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/desired_y_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:textSize="30sp"
                    android:text="@string/y_label"
                    android:textColor="#ffffff"/>
                <EditText
                    android:id="@+id/desired_y"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="@string/initPosValue"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:inputType="numberSigned|numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/desired_theta_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:textSize="30sp"
                    android:text="@string/theta_label"
                    android:textColor="#ffffff"/>
                <EditText
                    android:id="@+id/desired_theta"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:inputType="numberSigned"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">

            <LinearLayout
                android:id="@+id/x_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:textSize="30sp"
                    android:text="@string/x_label"
                    android:textColor="#ffffff" />
                <TextView
                    android:id="@+id/x_pos"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30sp"
                    android:text="@string/initPosValue"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/y_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:textSize="30sp"
                    android:text="@string/y_label"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/y_pos"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30sp"
                    android:text="@string/initPosValue"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/theta_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:textSize="30sp"
                    android:text="@string/theta_label"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/theta_pos"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30sp"
                    android:text="@string/initPosValue"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/accept"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_arrow"
        android:src="@drawable/stop"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:layout_below="@+id/positions_box"
        android:layout_marginTop="10sp"/>

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_arrow"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/exit" />

</RelativeLayout>